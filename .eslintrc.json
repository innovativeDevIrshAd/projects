{
  "plugins": ["import", "tailwindcss"],
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "rules": {
    "no-undef": "off",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ],
    "tailwindcss/classnames-order": "warn", // Allows warnings instead of errors for class order issues
    "tailwindcss/enforces-shorthand": "warn", // Allows warnings for shorthand usage
    "react-hooks/exhaustive-deps": "warn", // Warn on missing dependencies in hooks like useEffect or useCallback
    "object-shorthand": "warn" // Warn on missing object property shorthand
  }
}
